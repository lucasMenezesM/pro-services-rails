<!-- component -->
<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Sign In</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'space-y-4'}) do |f| %>
      <div>
        <%= f.label :email, "Email", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'primary-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: 'your@email.com' %>
      </div>

      <div>
        <%= f.label :password, "Password", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'primary-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: '••••••••' %>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'rounded border-gray-300 text-indigo-600 focus:ring-indigo-500' %>
          <%= f.label :remember_me, "Remember me", class: 'ml-2 text-sm text-gray-600' %>
        </div>

        <div>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'secondary-color text-sm text-indigo-600 hover:text-indigo-500' %><br />
        </div>

      </div>

      <%= f.submit "Sign In", class: 'primary-button w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-lg transition-colors' %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Don't have an account? 
      <%= link_to 'Sign Up', new_user_registration_path, class: 'secondary-color text-indigo-600 hover:text-indigo-500 font-medium'%>
    </div>
    <div class="mt-6 text-center text-sm text-gray-600">
      
    </div>
  </div>
</div>