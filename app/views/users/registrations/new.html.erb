<!-- component -->
<div class="min-h-screen bg-gray-100 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Sign Up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'space-y-4'}) do |f| %>
      <div>
        <%= f.label :name, "Full name", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: 'your name' %>
      </div>

      <div>
        <%= f.label :email, "Email", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: 'your@email.com' %>
      </div>

      <div>
        <%= f.label :password, "Password", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: '••••••••' %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Password Confirmation", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.password_field :password_confirmation, autocomplete: "password-confirmation", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: '••••••••' %>
      </div>

      <div class="grid grid-cols-2 gap-2">
        <div>
          <%= f.label :country, "Country", class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.text_field :country, autofocus: true, autocomplete: "country", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: 'United States' %>
        </div>

        <div>
          <%= f.label :state, "State", class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.text_field :state, autofocus: true, autocomplete: "state", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: 'Florida' %>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-2">
        <div>
          <%= f.label :city, "City", class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: 'Orlando' %>
        </div>

        <div>
          <%= f.label :address, "Address", class: 'block text-sm font-medium text-gray-700 mb-1' %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all', placeholder: '123 Main St, Apt 4B' %>
        </div>
      </div>

      <div>
        <%= f.label :role, "Are you here to be a professional or a client?", class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.select :role, options_for_select([['Client', 'client'], ['Professional', 'professional']]), {}, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all' %>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'rounded border-gray-300 text-indigo-600 focus:ring-indigo-500' %>
          <%= f.label :remember_me, "Remember me", class: 'ml-2 text-sm text-gray-600' %>
        </div>
        <a href="#" class="text-sm text-indigo-600 hover:text-indigo-500">Forgot password?</a>
      </div>

      <%= f.submit "Sign In", class: 'w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-lg transition-colors' %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Do you already have an account?
      <%= link_to 'Sign in', new_user_session_path, class: 'text-indigo-600 hover:text-indigo-500 font-medium'%>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>