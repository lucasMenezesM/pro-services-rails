<!-- component -->
<span data-ripple-dark="true" data-popover-target="profile-info-popover"
    class="select-none rounded-lg <%=define_request_color(service_request.status)%> py-1 px-4 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85]  focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none">
    <%= service_request.status == 'in_progress' ? 'in progress' : service_request.status %>
  </span>
  <div data-popover="profile-info-popover"
    class="flex flex-col h-70 max-w-[24rem] whitespace-normal break-words rounded-lg border border-blue-gray-50 bg-white p-4 font-sans text-sm font-normal text-blue-gray-500 shadow-lg shadow-blue-gray-500/10 focus:outline-none">
    <div class="flex items-center justify-between gap-4 mb-2">
      <% if service_request.client.avatar.attached? %>
        <%= image_tag url_for(service_request.client.avatar), class: 'relative inline-block object-cover object-center w-12 h-12 rounded-full' %>
      <%else%>
        <p>sem avatar</p>
      <%end%>
        <%=link_to service_request_path(service_request), class: "select-none rounded-lg bg-gray-900 py-2 px-3 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none bg-primary-color" do%>
          See Request
        <%end%>
 
    </div>
    <h6
      class="items-center gap-2 mb-2 font-sans text-base antialiased font-medium leading-relaxed tracking-normal text-blue-gray-900">
      <p><%=service_request.client.name%></p>
      <p class="text-sm text-blue-gray-700" href="#">
        <%= define_last_request_status(service_request)%>
      </p>
    </h6>
    <p class="block font-sans text-sm antialiased font-normal leading-normal text-gray-700 grow">
      <%=service_request.description%>
    </p>
    <div class="flex items-center gap-8 pt-4 mt-6 border-t border-blue-gray-50 ">
      <p class="flex items-center gap-1 font-sans text-xs antialiased font-normal text-gray-700">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
          aria-hidden="true" class="-mt-0.5 h-3.5 w-3.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"></path>
        </svg>
        <%= service_request.client.city%>
      </p>
      <a href="#" class="flex items-center gap-1 font-sans text-xs antialiased font-normal text-gray-700">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="18"  height="18"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-briefcase-2"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 9a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-9z" /><path d="M8 7v-2a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v2" /></svg>
        <%= service_request.service.name %>
      </a>
    </div>
  </div>