<div id="service_requests" class="min-w-full divide-y divide-gray-200 space-y-5">
  <% if service_requests.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-5 gap-2">
      <% service_requests.each do |service_request| %>
        <div class="">
          <%= render 'service_requests/shared/request_card', service_request: service_request %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center my-10">No service requests found.</p>
  <% end %>
</div>