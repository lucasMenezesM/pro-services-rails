<%= form_with(model: service_request, class: "contents") do |form| %>
  <% if service_request.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(service_request.errors.count, "error") %> prohibited this service_request from being saved:</h2>

      <ul class="list-disc ml-6">
        <% service_request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": service_request.errors[:title].none?, "border-red-400 focus:outline-red-600": service_request.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": service_request.errors[:description].none?, "border-red-400 focus:outline-red-600": service_request.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :service_id %>
    <%#= form.text_field :service_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": service_request.errors[:service_id].none?, "border-red-400 focus:outline-red-600": service_request.errors[:service_id].any?}] %>

    <%= form.collection_select :service_id, @services, :id, :name, { prompt: "Select a service" }, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>